<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:background="@drawable/drawer_cover"
    android:padding="20dp">

    <ImageView
        android:src="@drawable/drawer_add_pic"
        android:id="@+id/profile_pic_drawer"
        android:layout_width="75dp"
        android:layout_height="75dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_drawer"
        android:text="@string/drawer_user_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_drawer"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:text="@string/drawer_email"/>

</LinearLayout>